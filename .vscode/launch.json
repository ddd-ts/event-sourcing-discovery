    "version": "0.2.0",
    "configurations": [
        {
            "name": "Current File",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "pnpm",
            "cwd": "${workspaceFolder}",
            "runtimeArgs": ["ts-node", "${file}"],
            "skipFiles": [
              "<node_internals>/**",
              "${workspaceFolder}/**/node_modules/**"
            ]
          }
    ]
}